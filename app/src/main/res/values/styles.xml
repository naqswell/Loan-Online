<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CftLoginTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/CftLoginTextSize</item>
        <item name="boxCornerRadiusTopStart">@dimen/CftLoginTextInputCorners</item>
        <item name="boxCornerRadiusTopEnd">@dimen/CftLoginTextInputCorners</item>
        <item name="boxCornerRadiusBottomStart">@dimen/CftLoginTextInputCorners</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/CftLoginTextInputCorners</item>
        <item name="boxStrokeColor">@color/text_input_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">?CftHintColor</item>
        <item name="hintTextColor">@color/focused</item>
    </style>

    <style name="CftButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?CftButtonsTextColor</item>
        <item name="android:textSize">@dimen/CftButtonTextSize</item>
        <item name="android:backgroundTint">?CftButtonsColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/CftButtonCorners</item>
        <item name="android:layout_width">@dimen/CftMaterialButtonRecommendationMaxWidth</item>
    </style>

    <style name="CftToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:background">?attr/CftBackgroundColor</item>
    </style>

    <style name="CftToolbarTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/CftToolBarTextSize</item>
        <item name="android:textColor">?CftToolbarTextColor</item>
    </style>


</resources>